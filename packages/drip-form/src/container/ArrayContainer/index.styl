// &--container
.array-item
	&--field
		position relative

		&_last-child
			border-bottom none

		.fa-trash-alt
			margin-right 20px
			color #2d64ff
			font-size 0.9rem
			opacity 0.7
			cursor pointer

	&--header
		display flex
		justify-content space-between
		align-items center
		padding 4px 0
		height 32px
		background-color #2864ff1a

		&:hover
			.array-item--removehover
				display block

	&--handle
		display flex
		align-items center

	&--removehover
		display none

	&--remove
		diplay block

	&--case
		padding 20px 20px 0

	&--number
		margin-left 20px
		font-size 12px

	&--add
		display flex
		justify-content center
		align-items center
		height 32px
		border 1px #d9d9d9 dashed
		cursor pointer

		&_title
			margin-left 8px
